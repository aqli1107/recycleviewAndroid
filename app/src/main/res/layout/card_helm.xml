<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_helm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    app:layout_goneMarginEnd="4dp"
    app:cardCornerRadius="4dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:padding="8dp">
        <ImageView
            android:id="@+id/img_helm"
            android:layout_width="150dp"
            android:layout_height="220dp"
            tools:src="@color/colorAccent"/>
        <TextView
            android:id="@+id/name_helm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/img_helm"
            android:layout_toRightOf="@+id/img_helm"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/helm_name"/>
        <TextView
            android:id="@+id/feature_helm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/name_helm"
            android:layout_toEndOf="@+id/img_helm"
            android:layout_toRightOf="@+id/img_helm"
            android:text="@string/feature_helm"
            android:ellipsize="end"
            android:maxLines="5"/>
        <TextView
            android:id="@+id/price_helm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/name_helm"
            android:layout_toEndOf="@+id/img_helm"
            android:layout_toRightOf="@+id/img_helm"
            android:text="@string/price_helm"
            android:ellipsize="end"
            android:maxLines="5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toEndOf="@+id/img_helm"
            android:layout_toRightOf="@+id/img_helm"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_set_favorite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:text="Favorite"/>
            <Button
                android:id="@+id/btn_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="Buy"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>